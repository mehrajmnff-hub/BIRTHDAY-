  <script>
    // Simple full-screen image viewer
    document.querySelectorAll('.card img').forEach(img=>{
      img.style.cursor='zoom-in'
      img.addEventListener('click',()=>{
        const overlay=document.createElement('div')
        overlay.style.cssText='position:fixed;inset:0;background:rgba(2,6,23,.9);display:flex;align-items:center;justify-content:center;z-index:9999;padding:20px'
        const i=document.createElement('img'); i.src=img.src; i.style.maxWidth='95%'; i.style.maxHeight='95%'; i.style.borderRadius='8px'
        overlay.appendChild(i)
        overlay.addEventListener('click',()=>overlay.remove())
        document.body.appendChild(overlay)
      })
    })
  </script>
